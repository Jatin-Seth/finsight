<script>
document.addEventListener('DOMContentLoaded', function() {
    const nameInput = document.getElementById('name');
    const nameCounter = document.getElementById('nameCounter');
    const portfolioPreview = document.getElementById('portfolio-preview');
    const previewName = document.getElementById('preview-name');
    const previewCurrency = document.getElementById('preview-currency');
    const previewDate = document.getElementById('preview-date');
    const currencyOptions = document.querySelectorAll('input[name="currency"]');
    const form = document.getElementById('portfolioForm');
    const createBtn = document.getElementById('createBtn');

    // Set current date
    previewDate.textContent = new Date().toLocaleDateString('en-US', { 
        year: 'numeric', 
        month: 'long', 
        day: 'numeric' 
    });

    // Name input character counter and preview
    nameInput.addEventListener('input', function() {
        const length = this.value.length;
        nameCounter.textContent = `${length}/50 characters`;
        
        if (length > 0) {
            previewName.textContent = this.value;
            portfolioPreview.style.display = 'block';
        } else {
            previewName.textContent = '-';
            portfolioPreview.style.display = 'none';
        }
    });

    // Currency selection preview
    currencyOptions.forEach(option => {
        option.addEventListener('change', function() {
            previewCurrency.textContent = this.value;
        });
    });

    // Form validation and submission
    form.addEventListener('submit', function(e) {
        const name = nameInput.value.trim();
        
        if (!name) {
            e.preventDefault();
            alert('Please enter a portfolio name');
            nameInput.focus();
            return;
        }

        if (name.length < 3) {
            e.preventDefault();
            alert('Portfolio name must be at least 3 characters long');
            nameInput.focus();
            return;
        }

        // Show loading state
        createBtn.disabled = true;
        createBtn.innerHTML = `
            <span style="position: relative; z-index: 2; display: flex; align-items: center; justify-content: center;">
                <span style="margin-right: 10px;">‚è≥</span>
                Creating Portfolio...
            </span>
        `;
        createBtn.style.opacity = '0.8';
    });

    // Name input validation styling
    nameInput.addEventListener('blur', function() {
        if (this.value.length > 0 && this.value.length < 3) {
            this.style.borderColor = '#f44336';
            this.style.background = '#ffebee';
        } else if (this.value.length >= 3) {
            this.style.borderColor = '#4CAF50';
            this.style.background = '#e8f5e8';
        }
    });

    // Auto-focus name input
    nameInput.focus();
});
</script>

